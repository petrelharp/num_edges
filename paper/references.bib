  interhash = {b8b41f9b9fb66cf6fd461c4b74b38d14},
  intrahash = {ce54912e2686a743d05bccc63a75fdb9},
  issn = {0002-9297},
  journal = {The American Journal of Human Genetics},
  keywords = {ARG ARG_inference GWAS methods tree_GWAS},
  number = 5,
  pages = {910 - 922},
  timestamp = {2024-11-27T06:39:19.000+0100},
  title = {Mapping Trait Loci by Use of Inferred Ancestral Recombination Graphs},
